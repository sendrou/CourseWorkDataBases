@model Cargo.ViewModels.EditLoadsViewModel

@{
    ViewBag.Title = "Изменение грузов";
}

<!DOCTYPE html>
<html>
<body>
    <div class="container">
        <form asp-action="Edit" asp-controller="Loads">

            <div class="card">
                <div class="card-header text-center bg-light">
                    <ul class="nav nav-pills card-header-pills">
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Index">Поиск</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Create">Добавление</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active bg-dark">Изменение</a>
                        </li>
                    </ul>
                </div>
                <div class="card-body text-center">
                        <span class="form-group">
                            <input type="hidden" asp-for="Id" />
                        </span>
                    <div class="form-group">
                        <div class="col">
                            <label asp-for="LoadName">Название</label>
                            <input type="text" id="LoadName" class="form-control" asp-for="LoadName" />
                        </div>
                        <div class="col">
                            <label asp-for="Volume">Объем</label>
                            <input type="number" id="Volume" class="form-control" asp-for="Volume" />
                        </div>
                        <div class="col">
                            <label asp-for="Weight">Вес</label>
                            <input type="number" id="Weight" class="form-control" asp-for="Weight" />
                        </div>

                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-outline-dark" value="Сохранить" />
                    </div>
                </div>
                
            </div>
                        
                    </form>
                </div>

</body>
</html>