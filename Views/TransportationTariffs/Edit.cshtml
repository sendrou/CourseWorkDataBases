@model Cargo.ViewModels.EditTransportationTariffsViewModel

@{
    ViewBag.Title = "Изменение тарифов";
}

<!DOCTYPE html>
<html>
<body>
    <div class="container">
        <form asp-action="Edit" asp-controller="TransportationTariffs">

            <div class="card">
                <div class="card-header text-center bg-light">
                    <ul class="nav nav-pills card-header-pills">
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Index">Поиск</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Create">Добавление</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active bg-dark">Изменение</a>
                        </li>
                    </ul>
                </div>
                <div class="card-body text-center">
                        <span class="form-group">
                            <input type="hidden" asp-for="Id" />
                        </span>
                    <div class="form-group">
                        <div class="col">
                            <label asp-for="TariffPerTKm">Тариф за TKm</label>
                            <input type="number" id="tariffPerTKm" class="form-control" asp-for="TariffPerTKm" />
                        </div>
                        <div class="col">
                            <label asp-for="TariffPerM3Km">Тариф за M3Km</label>
                            <input type="number" id="tariffPerM3Km" class="form-control" asp-for="TariffPerM3Km" />
                        </div>
                        

                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-outline-dark" value="Сохранить" />
                    </div>
                </div>
                
            </div>
                        
                    </form>
                </div>

</body>
</html>