@model Cargo.ViewModels.CreateUserViewModel
@{
    ViewBag.Title = "Добавление пользователя";
}

<!DOCTYPE html>
<html>
<head>

</head>
<body>
    <div class="container">
        <div class="card">
            <div class="card-header">
                <ul class="nav nav-pills card-header-pills">
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Index">Поиск</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active  bg-dark">Добавление</a>
                    </li>
                </ul>
            </div>
            <div class="card-body text-center">
                <form asp-action="Create" asp-controller="Users">
                    <div class="form-group">
                        <label asp-for="Email" class="control-label">Email</label>
                        <input type="text" asp-for="Email" class="form-control" />
                        <span class="text-danger small" asp-validation-for="Email"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Login" class="control-label">Логин</label>
                        <input type="text" asp-for="Login" class="form-control" />
                        <span class="text-danger small" asp-validation-for="Login"></span>
                    </div>
                  
                    <div class="form-group">
                        <label asp-for="Password" class="control-label">Пароль</label>
                        <input type="password" asp-for="Password" class="form-control" />
                        <span class="text-danger small" asp-validation-for="Password"></span>
                    </div>
                    <div class="form-group">
                        <div>

                            @Html.RadioButtonFor(model => model.Role, "user")
                            <span> Пользователь</span>
                            @Html.RadioButtonFor(model => model.Role, "admin")
                            <span> Администратор</span>

                        </div>
                        <span class="text-danger small" asp-validation-for="Role"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Добавить" class="btn  btn-outline-dark" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>


