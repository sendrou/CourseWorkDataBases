@model Cargo.ViewModels.EditUserViewModel

@{
    ViewBag.Title = "Редактирование пользователя";
}

<!DOCTYPE html>
<html>
<head>

</head>
<body>
    <div class="container">
        <div class="card">
            <div class="card-header">
                <ul class="nav nav-pills card-header-pills">
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Index">Поиск</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Create">Добавление</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active">Изменение</a>
                    </li>
                </ul>
            </div>
            <div class="card-body">
                <form asp-action="Edit" asp-controller="Users">
                    <span class="form-group">
                        <input type="hidden" asp-for="Id" />
                    </span>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label">Email</label>
                        <input type="text" asp-for="Email" class="form-control" />
                        <span class="text-danger small" asp-validation-for="Email"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Login" class="control-label">Логин</label>
                        <input type="text" asp-for="Login" class="form-control" />
                        <span class="text-danger small" asp-validation-for="Login"></span>
                    </div>
                  
                    <div class="form-group" style="margin-top: 10px">
                        <input type="submit" value="Сохранить" class="btn btn-outline-secondary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>

