@model Cargo.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
</head>
<body>
    <div class="container col-md-4 mx-auto">
        <h2 class="mb-4 text-center">Вход в приложение</h2>
        <div class="card " style="border-radius: 15px;">
            <div class="card-body">
                <form method="post" asp-controller="Account" asp-action="Login"
                      asp-route-returnUrl="@Model.ReturnUrl">
                    <div class="form-group">
                        <label asp-for="Login" class="control-label"></label>
                        <input type="text" asp-for="Login" class="form-control" />
                        <span class="text-danger small" asp-validation-for="Login"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input type="password" asp-for="Password" class="form-control" />
                        <span class="text-danger small" asp-validation-for="Password"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="RememberMe" class="control-label"></label> </br>
                        <input asp-for="RememberMe"/>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Войти" class="btn btn-outline-dark " />
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>