@model Cargo.ViewModels.EditDistancesViewModel

@{
    ViewBag.Title = "Изменение дистанций";
}

<!DOCTYPE html>
<html>
<body>
    <div class="container">
        <form asp-action="Edit" asp-controller="Distances">

            <div class="card">
                <div class="card-header text-center bg-light">
                    <ul class="nav nav-pills card-header-pills">
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Index">Поиск</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Create">Добавление</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active bg-dark">Изменение</a>
                        </li>
                    </ul>
                </div>
                <div class="card-body text-center">
                    <span class="form-group">
                        <input type="hidden" asp-for="Id" />
                    </span>
                    <div class="form-group">
                        <div class="col">
                            <label for="departureSettlement">Пункт отправления</label>
                            <select id="departureSettlement" class="form-control" asp-for="SelectedDeparturesSettlementId" asp-items="Model.DeparturesSettlements"></select>
                        </div>
                        <div class="col">
                            <label for="arrivalSettlement">Пункт прибытия</label>
                            <select id="arrivalSettlement" class="form-control" asp-for="SelectedArrivalSettlementId" asp-items="Model.ArrivalSettlements"></select>
                        </div>
                        <div class="col">
                            <label asp-for="SelectedDistance">Дистанция</label>
                            <input type="number" asp-for="SelectedDistance" class="form-control" />
                            <span class="text-danger small" asp-validation-for="SelectedDistance"></span>
                        </div>



                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-outline-dark" value="Сохранить" />
                    </div>
                </div>

            </div>

        </form>
    </div>

</body>
</html>