@{

    Layout = "/Views/Shared/_Layout.cshtml";
}
@model Cargo.ViewModels.CargoTransportationsViewModel
<!DOCTYPE html>
<html>
<head>
    
    <title>"CargoTransportations"</title>
    <style>
    label {
        white-space: nowrap;
    }
        
</style>
</head>
<body>
    <div class="container">
        <div class="card " >
     <form asp-action="UpdateIndex" method="post" id="form">

        <div class="card-header text-center">
            <ul class="nav nav-pills card-header-pills">
                <li class="nav-item">
                            <a class="nav-link active bg-dark">Поиск</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link " asp-action="Create">Добавление</a>
                </li>
            </ul>
        </div>
       
                <div class="card-body " style="margin-bottom: -20px">
                    <div class="form-row">
                        <div class="col-2">
                            <label for="cars">Машины</label>
                            <select id="car" class="form-control" name="car" asp-items="Model.FilterCargoTransportationsViewModel.Cars"></select>
                        </div>
                        
                        <div class="col-2">
                            <label for="driver">Водители</label>
                            <select class="form-control" id="driver" name="driver" asp-items="Model.FilterCargoTransportationsViewModel.Drivers"></select>
                        </div>
                        <div class="col-2">
                            <label for="organization">Организации</label>
                            <select class="form-control" id="organization" name="organization" asp-items="Model.FilterCargoTransportationsViewModel.Organizations"></select>
                        </div>
                        <div class="col-2">
                            <label for="load">Груз</label>
                            <select class="form-control" id="load" name="load" asp-items="Model.FilterCargoTransportationsViewModel.Loads"></select>
                        </div>
                       
                       
                    </div>
                    <div class ="form-row mt-2">
                        
                        <div class="col">
                            <label for="distance">Расстояние от</label>
                            <input type="number" class="form-control" name="startDistance" id="startDistance" value="@Model.FilterCargoTransportationsViewModel.SelectedStartDistance"></input>
                        </div>
                        <div class="col">
                            <label for="distance">Расстояние до</label>
                            <input type="number" class="form-control" name="endDistance" id="endDistance" value="@Model.FilterCargoTransportationsViewModel.SelectedEndDistance"></input>
                        </div>
                        <div class="col">
                            <label for="transportationTariff">Тариф от</label>
                            <input type="number" class="form-control" id="startTariff" name="startTariff" value="@Model.FilterCargoTransportationsViewModel.SelectedStartTransportationTariff"></input>
                        </div>
                        <div class="col">
                            <label for="transportationTariff">Тариф до</label>
                            <input type="number" class="form-control" id="endTariff" name="endTariff" value="@Model.FilterCargoTransportationsViewModel.SelectedEndTransportationTariff"></input>
                        </div>
                        <div class="col">
                            <label for="date">Начальная дата</label>
                            <input type="date" class="form-control" id="startDate" name="startDate" value="@Model.FilterCargoTransportationsViewModel.SelectedStartDate.ToString("yyyy-MM-dd")"   />
                        </div>
                        <div class="col">
                            <label for="date">Конечная дата</label>
                            <input type="date" class="form-control" id="endDate" name="endDate" value="@Model.FilterCargoTransportationsViewModel.SelectedEndDate.ToString("yyyy-MM-dd")"   />
                        </div>
                        <div class="card-body">
                            <div class="form-row float-right" style="margin-top:10px; margin-bottom:10px">
                                <div class="col">
                                    <input class="btn btn-dark" value="Очистить" type="button" onclick="clearInputs()" />
                                </div>
                                <div class="col">
                                    <input class="btn btn-dark" type="submit" value="Найти" />
                                </div>
                            </div>

                        </div>
                    </div>


                </div>
    </form>
        </div>
        <div class="card " style="margin-top: 20px; margin-bottom:-20px;">
            
                <table class="table table-border " style="margin-bottom:-1px;">
                    <thead class="thead-dark">
                        <tr>
                            <th>DocumentID</th>
                            <th>Date</th>
                            <th>Organization</th>
                            <th>Distance</th>
                            <th>Driver</th>
                            <th>Car</th>
                            <th>Load</th>
                            <th>Tariff</th>
                            <th></th>
                            <th></th>
                        </tr>

                    </thead>
                    <tbody >
                        @foreach (var cargo in Model.CargoTransportations)
                        {
                            string formattedDate = cargo.Date != null ? $"{cargo.Date.Day:00}.{cargo.Date.Month:00}.{cargo.Date.Year}" : string.Empty;
                            <tr>
                                <td>@cargo.DocumentId</td>
                                <td>@formattedDate</td>
                                <td>@cargo.Organization.OrganizationName</td>
                                <td>@cargo.Distance.Distance1</td>
                                <td>@cargo.Driver.FullName</td>
                                <td>@cargo.Car.RegistrationNumber</td>
                                <td>@cargo.Load.LoadName</td>
                                <td>@(cargo.TransportationTariff.TariffPerTKm.ToString() + " за время*км, " + cargo.TransportationTariff.TariffPerM3Km.ToString() + " за м3*км")</td>
                                <td>
                                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@cargo.DocumentId">Изменить</a>
                                </td>
                                <td>
                                    <form asp-action="Delete" asp-route-id="@cargo.DocumentId" method="post">
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            Удалить
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
           
        </div>
        <div style ="margin-top: 100px; margin-bottom:100px"></div>
            <nav style="margin-top: 10px; margin-bottom:50px">
                <ul class="pagination justify-content-end">
                    @if (Model.PageViewModel.HasPreviousPage)
                    {
                        <li class="page-item">
                            <form asp-action="UpdateIndex" asp-route-page="@(Model.PageViewModel.PageNumber-1)"
                                  asp-route-car="@(Model.FilterCargoTransportationsViewModel.SelectedCarId)"
                                  method="post">
                                <button type="submit" class="page-link">
                                    Предыдущая
                                </button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="page-item disabled">
                            <button type="submit" class="page-link">
                                Предыдущая
                            </button>
                        </li>
                    }

                    @if (Model.PageViewModel.HasNextPage)
                    {
                        <li class="page-item">
                            <form asp-action="UpdateIndex" asp-route-page="@(Model.PageViewModel.PageNumber+1)"
                                  asp-route-car="@(Model.FilterCargoTransportationsViewModel.SelectedCarId)" method="post">
                                <button type="submit" class="page-link">
                                    Следующая
                                </button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="page-item disabled">
                            <button type="submit" class="page-link">
                                Следующая
                            </button>
                        </li>
                    }
                </ul>
            </nav>
        <div style="margin-top: 100px; margin-bottom:100px"></div>
        
        
    </div>
</body>
</html>
