@{

    Layout = "/Views/Shared/_Layout.cshtml";
}
@model Cargo.ViewModels.CargoTransportationsViewModel
<!DOCTYPE html>
<html>
<head>
    
    <title>"CargoTransportations"</title>
</head>
<body>
    <div class="container">
        <div class="card">
     <form asp-action="UpdateIndex" method="post" id="form">

        <div class="card-header text-center">
            <ul class="nav nav-pills card-header-pills">
                <li class="nav-item">
                            <a class="nav-link active bg-dark">Поиск</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link " asp-action="Create">Добавление</a>
                </li>
            </ul>
        </div>
        <div class="card-body">
            <div class="form-row float-right" style="margin-top:10px; margin-bottom:10px">
                <div class="col">
                    <input class="btn btn-dark" value="Очистить" type="button" onclick="clearInputs()" />
                </div>
                <div class="col">
                            <input class="btn btn-dark" type="submit" value="Найти" />
                </div>
            </div>

        </div>
                <div class="card-body">
                    <div class="form-row">
                        <div class="col">
                            <label for="cars">Машины</label>
                            <select id="car" class="form-control" name="car" asp-items="Model.FilterCargoTransportationsViewModel.Cars"></select>
                        </div>
                        <div class="col">
                            <label for="distance">Расстояния</label>
                            <select class="form-control" id="distance" asp-items="Model.FilterCargoTransportationsViewModel.Distances"></select>
                        </div>
                        <div class="col">
                            <label for="driver">Водители</label>
                            <select class="form-control" id="driver" asp-items="Model.FilterCargoTransportationsViewModel.Drivers"></select>
                        </div>
                        <div class="col">
                            <label for="organization">Организации</label>
                            <select class="form-control" id="organization" asp-items="Model.FilterCargoTransportationsViewModel.Organizations"></select>
                        </div>
                        <div class="col">
                            <label for="load">Груз</label>
                            <select class="form-control" id="load" asp-items="Model.FilterCargoTransportationsViewModel.Loads"></select>
                        </div>
                        <div class="col">
                            <label for="transportationTariff">Тариф</label>
                            <select class="form-control" id="transportationTariff" asp-items="Model.FilterCargoTransportationsViewModel.TransportationTariffs"></select>
                        </div>
                        <div class="col">
                            <label for="date">Начальная дата</label>
                            <input type="date" class="form-control" value="@Model.FilterCargoTransportationsViewModel.SelectedDate" />
                        </div>
                    </div>


                </div>
    </form>
        </div>
    <div class="card" style="margin-top: 10px">
        <div class="table-responsive">
            <table class="table table-border ">
                <thead class="thead-dark">
        <tr>
            <th>DocumentID</th>
            <th>Date</th>
            <th>Organization</th>
            <th>Distance</th>
            <th>Driver</th>
            <th>Car</th>
            <th>Load</th>
            <th>Tariff</th>
            <th></th>
            <th></th>
        </tr>

                </thead>
                <tbody>
        @foreach (var cargo in Model.CargoTransportations)
        {
                string formattedDate = cargo.Date != null ? $"{cargo.Date.Day:00}.{cargo.Date.Month:00}.{cargo.Date.Year}" : string.Empty;
            <tr>
                <td>@cargo.DocumentId</td>
                <td>@formattedDate</td>
                <td>@cargo.Organization.OrganizationName</td>
                <td>@cargo.Distance.Distance1</td>
                <td>@cargo.Driver.FullName</td>
                <td>@cargo.Car.RegistrationNumber</td>
                <td>@cargo.Load.LoadName</td>
                <td>@(cargo.TransportationTariff.TariffPerTKm.ToString() + " за время*км, " + cargo.TransportationTariff.TariffPerM3Km.ToString() + " за м3*км")</td>
                                <td>
                                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@cargo.DocumentId">Изменить</a>
                                </td>
                                <td>
                                    <form asp-action="Delete" asp-route-id="@cargo.DocumentId" method="post">
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            Удалить
                                        </button>
                                    </form>
                                </td>
            </tr>
        }
                        
                </tbody>
            </table>
            </div>
        </div>
        <nav style="margin-top: 10px">
            <ul class="pagination justify-content-end">
                @if (Model.PageViewModel.HasPreviousPage)
                {
                    <li class="page-item">
                        <form asp-action="UpdateIndex" asp-route-page="@(Model.PageViewModel.PageNumber-1)"
                              asp-route-car="@(Model.FilterCargoTransportationsViewModel.SelectedCarId)"
                               method="post"> 
                            <button type="submit" class="page-link">
                                Предыдущая
                            </button>
                        </form>
                    </li>
                }
                else
                {
                    <li class="page-item disabled">
                        <button type="submit" class="page-link">
                            Предыдущая
                        </button>
                    </li>
                }

                @if (Model.PageViewModel.HasNextPage)
                {
                    <li class="page-item">
                        <form asp-action="UpdateIndex" asp-route-page="@(Model.PageViewModel.PageNumber+1)"
                              asp-route-car="@(Model.FilterCargoTransportationsViewModel.SelectedCarId)" method="post">
                            <button type="submit" class="page-link">
                                Следующая
                            </button>
                        </form>
                    </li>
                }
                else
                {
                    <li class="page-item disabled">
                        <button type="submit" class="page-link">
                            Следующая
                        </button>
                    </li>
                }
            </ul>
        </nav>
    </div>
</body>
</html>
